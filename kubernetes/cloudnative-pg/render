#!/bin/bash

set -eu -o pipefail

BASEDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$BASEDIR"

# Source the chart-version helper
source "$BASEDIR/../scripts/chart-version"

rm -rf helm tmp
mkdir tmp helm

# Use helm_template helper function
helm_template cloudnative-pg cloudnative-pg \
	--values values.yaml \
	--namespace cnpg-system \
	--output-dir tmp

mv tmp/*/* helm
rmdir tmp/*
rmdir tmp
