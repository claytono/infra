#!/bin/bash
set -euo pipefail

REPO_ROOT="$(cd "$(dirname "$0")/../.." && pwd)"
# shellcheck source=../../scripts/require-secrets
source "$REPO_ROOT/scripts/require-secrets"

require_secrets HASS_BEARER_TOKEN || exit 1
exec curl -X GET -q -H "Authorization:Bearer $HASS_BEARER_TOKEN" https://hass.k.oneill.net/api/prometheus
