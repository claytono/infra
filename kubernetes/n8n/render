#!/usr/bin/env bash

set -eu -o pipefail

BASEDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd "$BASEDIR"

source "$BASEDIR/../scripts/chart-version"

rm -rf helm tmp
mkdir -p tmp helm/n8n helm/valkey

# Render n8n chart
helm_template n8n n8n --namespace n8n --values values.yaml --output-dir tmp

# Move n8n templates to helm/n8n/
mv tmp/n8n/templates/* helm/n8n/

# Clean up n8n temp dir
rm -rf tmp/n8n

# Render valkey chart separately
helm_template valkey valkey --namespace n8n --values valkey-values.yaml --output-dir tmp

# Move valkey templates to helm/valkey/
mv tmp/valkey/templates/* helm/valkey/

# Clean up
rm -rf tmp
rm -rf helm/*/tests
