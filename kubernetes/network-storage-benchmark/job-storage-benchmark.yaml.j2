---
apiVersion: batch/v1
kind: Job
metadata:
  name: storage-benchmark-{{ storage_type }}
spec:
  backoffLimit: 0
  ttlSecondsAfterFinished: 86400  # Keep job for 24 hours after completion
  template:
    metadata:
      labels:
        app: storage-benchmark
        storage-type: {{ storage_type }}
    spec:
      restartPolicy: Never
      priorityClassName: system-cluster-critical

      nodeSelector:
        kubernetes.io/hostname: {{ node_name }}

      # Allow scheduling on control plane nodes (k1)
      tolerations:
      - key: node-role.kubernetes.io/control-plane
        operator: Exists
        effect: NoSchedule

      containers:
      - name: test-storage
        image: {{ alpine_image }}
        command: ["/bin/sh", "-c"]
        args:
          - |
            apk add --no-cache fio python3

            echo "Starting tests"
            python3 /scripts/run-storage-tests.py
        env:
        - name: STORAGE_TYPE
          value: "{{ storage_type }}"
        - name: MOUNT_PATH
          value: "/mnt/storage"
        - name: OUTPUT_DIR
          value: "/results"
        - name: FAST_MODE
          value: "{{ fast_mode }}"
        - name: DEV_MODE
          value: "{{ dev_mode }}"
        - name: NODE_NAME
          valueFrom:
            fieldRef:
              fieldPath: spec.nodeName
        volumeMounts:
        - name: storage-volume
          mountPath: /mnt/storage
        - name: results
          mountPath: /results
        - name: fio-jobs
          mountPath: /fio-jobs
        - name: test-runner
          mountPath: /scripts
        - name: timezone
          mountPath: /etc/localtime
          readOnly: true

      volumes:
      - name: storage-volume
        persistentVolumeClaim:
          claimName: network-storage-benchmark-{{ storage_type }}
      - name: results
        persistentVolumeClaim:
          claimName: network-storage-benchmark-results
      - name: fio-jobs
        configMap:
          name: fio-jobs
      - name: test-runner
        configMap:
          name: test-runner
          defaultMode: 0755
      - name: timezone
        hostPath:
          path: /etc/localtime
          type: File
