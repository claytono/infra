---
apiVersion: v1
kind: Pod

metadata:
  name: {{ pod_name }}
  labels:
    app: results-copy

spec:
  restartPolicy: Never
  containers:
  - name: results-copy
    image: {{ alpine_image }}
    command: [sleep, infinity]
    volumeMounts:
    - name: results
      mountPath: /results
  volumes:
  - name: results
    persistentVolumeClaim:
      claimName: network-storage-benchmark-results
