#!/usr/bin/env bash
# Helper to validate required secrets are set
# Source this file, then call: require_secrets VAR1 VAR2 ...

require_secrets() {
	local missing=()
	for var in "$@"; do
		if [[ -z "${!var:-}" ]]; then
			missing+=("$var")
		fi
	done
	if [[ ${#missing[@]} -gt 0 ]]; then
		echo "âŒ Missing required secrets: ${missing[*]}" >&2
		echo "   Run: direnv reload" >&2
		return 1
	fi
}
